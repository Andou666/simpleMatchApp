<!--<%= @user.inspect %>-->
<div class="container mt-5">
<div class="row">
    <div class="col-md-3 text-center">
    <% if @user.profile.avatar? %>
        <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    <% end %>
    </div>
    <div class="col-md-6 card">
    <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
    <div class="card-body well profile-block profile-description">
    <h3>プロフィール</h3>
        <%= @user.profile.description %>
    </div>
        <% if current_user.plan_id == 2 %>
        <div class="card-body well profile-block profile-description mt-1">
            <h3>連絡先</h3>
            <p>Tel :<%= @user.profile.phone_number %></p>
            <p>Mail:<%= @user.profile.contact_email %></p>
        </div>
        <% end %>
    </div>
</div>



</div>