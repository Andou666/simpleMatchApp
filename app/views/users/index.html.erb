<!--
<%= @users.inspect  %>
-->

<div class="container mt-5">
    <div class="row_">
    <div class="">
        <h1 class="text-center">DevMatch</h1>
        <p>ようこそDevMatchコミュニティへ</p>
        <div class="card-deck">
        <% @users.each do |user| %>
            <% if user.profile %>
              <div class="well card mt-2 <%= cycle('white-bg', '') %>">
                <div class="card-img-top">
                  <% if user.profile.avatar? %>
                    <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url, class: 'user-index-avatar', style: 'width:100%; height: auto' %>
                    <% end %>
                  <% end %>
                </div>

                <div class="card-body">
                  <%= link_to user do %>
                      <h2 class="card-title"><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                      <p>

                      <%= user.profile.job_title %>
                      <% if user.plan_id == 2%>
                      <span class="label label-danger">PRO</span>
                      <% end %>
                      </p>
                  <% end %>
                </div>
              </div>
            <% end %>
            
        <% end %>
        </div>
        </div>
    </div>
    </div>
</div>
